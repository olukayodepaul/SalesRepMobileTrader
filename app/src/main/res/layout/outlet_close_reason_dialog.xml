<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:orientation="vertical"
        android:fadeScrollbars="true"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Reason for closing an outlet"
            android:textSize="18dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/clr_otp_bg"
            />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupRadios"
            android:layout_marginTop="10dp"
            android:id="@+id/radioGroups"
           >

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Outlet Demolished"
                android:textSize="15dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/monsoon"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outlet Relocated"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:textSize="15dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/monsoon"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outlet Never Existed"
                android:id="@+id/radioButton3"
                android:checked="false"
                android:textSize="15dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/monsoon"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer not Around"
                android:id="@+id/radioButton4"
                android:checked="false"
                android:textSize="15dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/monsoon"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Stop Tobacco Business"
                android:id="@+id/radioButton5"
                android:checked="false"
                android:textSize="15dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/monsoon"/>

        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/confirm_reasons"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginStart="1dp"
                android:background="@color/clr_otp_bg"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="Confirm"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints,RtlCompat" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:visibility="gone"
                android:layout_width="80dp"
                android:layout_height="40dp"
                tools:ignore="MissingConstraints"
                android:indeterminateTint="@color/clr_otp_bg"
                android:indeterminate="true"
                />

            <TextView
                android:id="@+id/close_reasons"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@color/clr_otp_bg"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints,RtlCompat" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>